{% extends "biblio.html.twig" %}
{% block body %}
<div class="col-md-9">
    <h1>Liste des livres</h1>
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Auteur</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {% for elem in livres %}
        <tr>
            <td>{{ elem.nom }}</td>
            <td>{{ elem.auteur }}</td>
            <td>{{ elem.annee }}</td>
            <td><a href="{{ url( 'modifier', { id: elem.id, type: "livre" } ) }}"><i class="fa fa-pencil"></i></td>
            <td></a><a href="{{ url( 'supprimer', { id: elem.id, type: "livre" } ) }}"><i style="color: red" class="fa fa-remove"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>        
    </table>
    <a class="btn btn-success" href="{{ url( 'nouveau', { type: "livre" } ) }}">Nouveau livre</a>
</div>
{% endblock %}